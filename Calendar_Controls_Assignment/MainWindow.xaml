<Window x:Class="Calendar_Controls_Assignment.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calendar_Controls_Assignment"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Calendar x:Name="myCalendar" HorizontalAlignment="Left" Margin="104,50,0,0" 
                  VerticalAlignment="Top"
                  SelectionMode="SingleDate"
                  SelectedDatesChanged="myCalendar_SelectedDatesChanged"/>
        <Label x:Name="labelResult" Content="[Result]" HorizontalAlignment="Left" Height="51" Margin="132,240,0,0" VerticalAlignment="Top" Width="379" FontSize="24"/>

    </Grid>
</Window>
